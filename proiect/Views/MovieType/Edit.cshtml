@model proiect.Models.MovieType 
 @{
ViewBag.Title = "Update movie type"; }
<h2>@ViewBag.Title</h2>
@using (Html.BeginForm(actionName: "Edit", controllerName: "MovieType", method: FormMethod.Post))
{
    @Html.HttpMethodOverride(HttpVerbs.Put) @Html.HiddenFor(b => b.MovieTypeId)
@Html.LabelFor(bt => bt.Name, "Name:")
<br />
@Html.EditorFor(bt => bt.Name, new { htmlAttributes = new { @class = "form-control" } }) 
    @Html.ValidationMessageFor(bt => bt.Name, "", new { @class = "text-danger" })
<br />
<br />
<button class="btn btn-primary" type="submit">Update</button>
}