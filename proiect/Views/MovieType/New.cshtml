@model proiect.Models.MovieType 
 @{
ViewBag.Title = "Create a movie type"; }
<h2>@ViewBag.Title</h2>

@using (Html.BeginForm(actionName: "New", controllerName: "MovieType", method: FormMethod.Post))
{@Html.LabelFor(bt => bt.Name, "Name:")
<br />
@Html.TextBoxFor(bt => bt.Name, null, new { placeholder = "Type in the movie type's name", @class = "form-control" }) 
    @Html.ValidationMessageFor(bt => bt.Name, "", new { @class = "text-danger" })
<br />
<br />
<button class="btn btn-primary" type="submit">Create</button>
}