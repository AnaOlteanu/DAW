@{
    ViewBag.Title = "Contact Info"; }
<h2>@ViewBag.Title</h2>

<table class="table">
    <thead>
    <th>Contact Info</th>
    <th>Update/Remove</th>
    </thead>
    <tbody>
        @foreach (var contactInfo in ViewBag.ContactInfos)
        {
            <tr>
                <td>
                    <div class="panel panel-default">
                        <div class="panel-body">
                            
                            @Html.Label("PhoneNumber", "Phone number:")
                            <br /> <p>@contactInfo.PhoneNumber</p>
                            @Html.Label("BirthYear", "Birth Year:")
                            <br /> <p>@contactInfo.BirthYear</p>
                            @Html.Label("BirthMonth", "Birth Month:")
                            <br /> <p>@contactInfo.BirthMonth</p>
                            @Html.Label("BirthDay", "Birth Day:")
                            <br /> <p>@contactInfo.BirthDay</p>
                            @Html.Label("Email", "Email:")
                            <br /> <p>@contactInfo.Email</p>
                            @Html.Label("Gender", "Gender:")
                            <br /> <p>@contactInfo.GenderType</p>

                        </div>
                    </div>

                <td>
                    @using (Html.BeginForm(actionName: "Edit", controllerName: "ContactInfo", method: FormMethod.Get,
               routeValues: new { id = contactInfo.ContactInfoId }))
                    {
                        <button type="submit" class="btn btn-link col-lg-3">Update</button>
                    }
                    @using (Html.BeginForm(actionName: "Delete", controllerName: "ContactInfo", method: FormMethod.Post,
                    routeValues: new { id = contactInfo.ContactInfoId }))
                    {
                        @Html.HttpMethodOverride(HttpVerbs.Delete)
                        <button type="submit" class="btn btn-link col-lg-3">Remove</button>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<br /> @Html.ActionLink("Add contact info", "New")