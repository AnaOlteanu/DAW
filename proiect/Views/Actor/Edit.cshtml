@model proiect.Models.Actor
@{
    ViewBag.Title = "Update actor"; }
<h2>@ViewBag.Title</h2>
@using (Html.BeginForm(actionName: "Edit", controllerName: "Actor", method: FormMethod.Post))
{
    @Html.HttpMethodOverride(HttpVerbs.Put)
    @Html.HiddenFor(b => b.ActorId)

    @Html.LabelFor(bt => bt.Name, "Name:")
    <br />
    @Html.EditorFor(bt => bt.Name, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(bt => bt.Name, "", new { @class = "text-danger" })
    <br />

    @Html.LabelFor(c => c.ContactInfo.PhoneNumber, "Phone number:")
    <br />
    @Html.TextBoxFor(c => c.ContactInfo.PhoneNumber, null, new
    {
        placeholder = "Type in the phone number",
        @class = "form-control"
    })
    @Html.ValidationMessageFor(c => c.ContactInfo.PhoneNumber, "", new { @class = "text-danger" })
    <br />

    <br />
    <button class="btn btn-primary" type="submit">Update</button>
}
